---
type Props = {
  id: string,
  name: string,
  price: number
  description?: string,
  spicy?: boolean
}

const {
  id, name, price, spicy, description,
} = Astro.props;
---

  <li class="flex space-between w-full border-solid border-b border-neutral-300 border-b-1 space-x-4 py-4 md:py-2">
    <div><span class="text-neutral-700 uppercase text-sm font-bold">{id}</span></div>
    <div class="flex flex-col">
      <div class="flex ">
        <span class="text-stone-600">
          {name}
          {' '}
          {spicy ? 'x' : ''}
        </span>
      </div>
      {description && <span class="text-sm">{description}</span>}
    </div>
    <span class="text-neutral-600 whitespace-nowrap text-right flex-grow">
      $
      {price}
    </span>

  </li>
