---
import { getCollection } from "astro:content";
import MenuContainer from "./MenuContainer.astro";
import { Image } from '@astrojs/image/components';
import Food from '@/assets/images/sushi-1.webp';
import { MenuItem } from "./MenuItem";
import MenuSectionTitle from "./MenuSectionTitle.astro";

const food = await getCollection('food');
const bento = food.filter((item) => String(item.id) === 'bento')[0];
const bentoKids = food.filter((item) => String(item.id) === 'bento-kids')[0];
---

<MenuContainer>
  <div class="space-y-8">
    <MenuSectionTitle title="Bento Boxes" description="Served with miso soup, salad, steamed rice, dynamite roll (4 pcs), assorted tempura & fruit or desserts"/>
    <ul class="list-none columns-1 md:columns-2 md:gap-8 lg:gap-12">
      {bento?.data.items.map((item) => (
        <MenuItem {...item} category={bento.data.category} client:only />
      ))}
    </ul>
  </div>

  <div class="flex flex-col space-y-4 md:space-y-0 md:flex-row justify-between items-center font-bold md:space-x-8">
    <div class="flex flex-col justify-center items-center space-y-2 text-sm">
      <Image src={Food} alt="Food" class=" w-[200px] md:w-[300px] border-8 border-white shadow-md" position="center" aspectRatio={4 / 3} width={400} />
      <span>X1 - Placeholder</span>
    </div>
    <div class="flex flex-col justify-center items-center space-y-2 text-sm">
      <Image src={Food} alt="Food" class=" w-[200px] md:w-[300px] border-8 border-white shadow-md" position="center" aspectRatio={4 / 3} width={400} />
      <span>X1 - Placeholder</span>
    </div>
    <div class="flex flex-col justify-center items-center space-y-2 text-sm">
      <Image src={Food} alt="Food" class=" w-[200px] md:w-[300px] border-8 border-white shadow-md" position="center" aspectRatio={4 / 3} width={400} />
      <span>X1 - Placeholder</span>
    </div>
  </div>

  <div class="grid grid-cols-12 md:gap-8 lg:gap-12 text-center ">
    <div class="col-span-12 lg:col-span-3 font-bold space-y-2">
      <Image src={Food} alt="Food" class=" w-[200px] md:w-[300px] border-8 border-white shadow-md" position="center" aspectRatio={4 / 3} width={400} />
      <div class="text-sm">X1 - Placeholder</div>
    </div>
    <div class="col-span-12 lg:col-span-6 md:col-span-6 space-y-8">
      <MenuSectionTitle title="Kids Bento Meals" description="Servied with steamed rice, dumplings, tempura & fruit or desserts. For kids aged 10 and under."/>
      <ul class="list-none">
        {bentoKids.data.items.map((item) => (
          <MenuItem {...item} category={bentoKids.data.category} client:only/>
        ))}
      </ul>
    </div>
    <div class="col-span-12 lg:col-span-3 font-bold space-y-2">
      <Image src={Food} alt="Food" class=" w-[200px] md:w-[300px] border-8 border-white shadow-md" position="center" aspectRatio={4 / 3} width={400} />
      <div class="text-sm">X1 - Placeholder</div>
    </div>
  </div>
</MenuContainer>