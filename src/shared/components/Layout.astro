---
import { SEO } from 'astro-seo';
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";
import '@/assets/style/global.css';
import Header from './Header.astro';
import Footer from './Footer.astro';
import { config } from 'config';
import MobileDrawer from './nav/MobileDrawer.astro';
export interface Props {
	title?: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="bg-white">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<GoogleFontsOptimizer url="https://fonts.googleapis.com/css2?family=Open+Sans:wght@200;400;700&display=swap" />
		<GoogleFontsOptimizer url="https://fonts.googleapis.com/css2?family=Jost:wght@400;700&display=swap" />
		<GoogleFontsOptimizer url="https://fonts.googleapis.com/css2?family=Chewy:wght@400&display=swap" />
		<SEO title={config.name} description={config.description}/>
		<title>{title}</title>
	</head>
	<body class="text-base">
		<div class="min-safe-h-screen flex flex-col justify-between">
			<div>
				<Header />
				<slot />
			</div>
			<Footer />
			<MobileDrawer />
	</div>
	</body>
</html>


<script src="../../assets/scripts/stagger-load.ts" />
<script src="../../assets/scripts/scroll-reveal.ts" />